@page
@model PresentationLayer.Pages.Driver.SessionsModel
@{
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Driver • Phiên sạc của tôi";
}

<section class="page-header">
    <h2>@ViewData["Title"]</h2>
</section>

<section class="filters">
    <div class="filter-group">
        <label for="statusFilter">Trạng thái</label>
        <select id="statusFilter" class="form-select">
            <option value="">Tất cả</option>
            <option value="InProgress">Đang sạc</option>
            <option value="Completed">Hoàn thành</option>
            <option value="Cancelled">Đã hủy</option>
            <option value="Failed">Thất bại</option>
        </select>
    </div>
    <div class="filter-group">
        <label for="dateFrom">Từ ngày</label>
        <input type="date" id="dateFrom" class="form-control" />
    </div>
    <div class="filter-group">
        <label for="dateTo">Đến ngày</label>
        <input type="date" id="dateTo" class="form-control" />
    </div>
    <div class="filter-group">
        <button class="btn btn-primary" onclick="loadSessions()">Lọc</button>
        <button class="btn btn-secondary" onclick="resetFilters()">Đặt lại</button>
    </div>
</section>

<section class="content-grid">
    <div class="dashboard-panel">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Thời gian bắt đầu</th>
                        <th>Trạm sạc</th>
                        <th>Cổng sạc</th>
                        <th>Năng lượng (kWh)</th>
                        <th>Chi phí</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody id="sessions-table-body">
                    <tr>
                        <td colspan="7" class="text-center">Đang tải...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/driver-sessions.js"></script>
}

