@page
@model PresentationLayer.Pages.Driver.IndexModel
@{
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Driver • Dashboard";
}

<section class="page-header">
    <h2>@ViewData["Title"]</h2>
</section>

<section class="content-grid">
    <!-- Active Session Card -->
    <div class="dashboard-panel" id="active-session-panel" style="display: none;">
        <div class="panel-header">
            <h3>Phiên sạc đang hoạt động</h3>
        </div>
        <div class="panel-body" id="active-session-content">
            <!-- Content will be loaded via JavaScript -->
        </div>
    </div>

    <!-- Upcoming Reservations -->
    <div class="dashboard-panel">
        <div class="panel-header">
            <h3>Đặt chỗ sắp tới</h3>
            <a href="/Driver/Reservations" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
        </div>
        <div class="panel-body">
            <div id="upcoming-reservations">
                <div class="text-center text-muted">Đang tải...</div>
            </div>
        </div>
    </div>

    <!-- Recent Sessions -->
    <div class="dashboard-panel">
        <div class="panel-header">
            <h3>Phiên sạc gần đây</h3>
            <a href="/Driver/Sessions" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
        </div>
        <div class="panel-body">
            <div id="recent-sessions">
                <div class="text-center text-muted">Đang tải...</div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="dashboard-panel">
        <div class="panel-header">
            <h3>Thống kê</h3>
        </div>
        <div class="panel-body">
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-value" id="total-sessions">0</div>
                    <div class="stat-label">Tổng phiên sạc</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value" id="total-energy">0</div>
                    <div class="stat-label">Tổng năng lượng (kWh)</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value" id="total-cost">0</div>
                    <div class="stat-label">Tổng chi phí (VND)</div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/driver-dashboard.js"></script>
}

