@page
@model PresentationLayer.Pages.Driver.PaymentModel
@{
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Driver • Thanh toán";
}

<section class="page-header">
    <h2>@ViewData["Title"]</h2>
</section>

<section class="content-grid">
    <div class="dashboard-panel">
        <div class="panel-header">
            <h3>Hóa đơn thanh toán</h3>
        </div>
        <div class="panel-body" id="payment-content">
            <div class="text-center text-muted">Đang tải...</div>
        </div>
    </div>
</section>

<input type="hidden" id="session-id" value="@(Model.SessionId?.ToString() ?? "")" />
<input type="hidden" id="payment-id" value="@(Model.PaymentId?.ToString() ?? "")" />

@section Scripts {
    <script src="~/js/driver-payment.js"></script>
}

