@page
@model PresentationLayer.Pages.Driver.HistoryModel
@{
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Driver • Lịch sử";
}

<section class="page-header">
    <h2>@ViewData["Title"]</h2>
</section>

<section class="content-grid">
    <!-- Tabs -->
    <ul class="nav nav-tabs mb-3" id="historyTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="sessions-tab" data-bs-toggle="tab" data-bs-target="#sessions" type="button" role="tab">
                Phiên sạc
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="payments-tab" data-bs-toggle="tab" data-bs-target="#payments" type="button" role="tab">
                Thanh toán
            </button>
        </li>
    </ul>

    <div class="tab-content" id="historyTabContent">
        <!-- Sessions Tab -->
        <div class="tab-pane fade show active" id="sessions" role="tabpanel">
            <div class="dashboard-panel">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Thời gian</th>
                                <th>Trạm sạc</th>
                                <th>Năng lượng (kWh)</th>
                                <th>Chi phí</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody id="sessions-history-body">
                            <tr>
                                <td colspan="6" class="text-center">Đang tải...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Payments Tab -->
        <div class="tab-pane fade" id="payments" role="tabpanel">
            <div class="dashboard-panel">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Ngày</th>
                                <th>Số tiền</th>
                                <th>Phương thức</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody id="payments-history-body">
                            <tr>
                                <td colspan="5" class="text-center">Đang tải...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/driver-history.js"></script>
}

