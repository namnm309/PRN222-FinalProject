@page "/Auth/Register"
@model PresentationLayer.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4">Đăng ký tài khoản</h2>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.ErrorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            @Model.SuccessMessage
                        </div>
                    }

                    <form method="post" asp-page-handler="Register">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RegisterRequest.Username" class="form-label">Tên đăng nhập <span class="text-danger">*</span></label>
                                <input asp-for="RegisterRequest.Username" class="form-control" required minlength="3" />
                                <span asp-validation-for="RegisterRequest.Username" class="text-danger"></span>
                                <small class="text-muted">Tối thiểu 3 ký tự</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="RegisterRequest.FullName" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                                <input asp-for="RegisterRequest.FullName" class="form-control" required />
                                <span asp-validation-for="RegisterRequest.FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RegisterRequest.Email" class="form-label">Email <span class="text-danger">*</span></label>
                                <input asp-for="RegisterRequest.Email" type="email" class="form-control" required />
                                <span asp-validation-for="RegisterRequest.Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="RegisterRequest.Phone" class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                                <input asp-for="RegisterRequest.Phone" class="form-control" required />
                                <span asp-validation-for="RegisterRequest.Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RegisterRequest.Password" class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                                <input asp-for="RegisterRequest.Password" type="password" class="form-control" required minlength="6" />
                                <span asp-validation-for="RegisterRequest.Password" class="text-danger"></span>
                                <small class="text-muted">Tối thiểu 6 ký tự</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="ConfirmPassword" class="form-label">Xác nhận mật khẩu <span class="text-danger">*</span></label>
                                <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" required />
                                <span id="confirmPasswordError" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RegisterRequest.DateOfBirth" class="form-label">Ngày sinh <span class="text-danger">*</span></label>
                                <input asp-for="RegisterRequest.DateOfBirth" type="date" class="form-control" required max="@DateTime.Now.AddYears(-18).ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="RegisterRequest.DateOfBirth" class="text-danger"></span>
                                <small class="text-muted">Bạn phải từ 18 tuổi trở lên</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="RegisterRequest.Gender" class="form-label">Giới tính <span class="text-danger">*</span></label>
                                <select asp-for="RegisterRequest.Gender" class="form-select" required>
                                    <option value="">-- Chọn giới tính --</option>
                                    <option value="Male">Nam</option>
                                    <option value="Female">Nữ</option>
                                    <option value="Other">Khác</option>
                                    <option value="Unknown">Không tiết lộ</option>
                                </select>
                                <span asp-validation-for="RegisterRequest.Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3">Đăng ký</button>
                    </form>

                    <div class="text-center mb-3">
                        <span class="text-muted">hoặc</span>
                    </div>

                    <form method="post" asp-page-handler="GoogleLogin" asp-antiforgery="false">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-google me-2" viewBox="0 0 16 16">
                                <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"/>
                            </svg>
                            Đăng ký với Google
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <small class="text-muted">Đã có tài khoản? <a asp-page="/Auth/Login">Đăng nhập ngay</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const passwordInput = document.querySelector('input[name="RegisterRequest.Password"]');
            const confirmPasswordInput = document.getElementById('ConfirmPassword');
            const confirmPasswordError = document.getElementById('confirmPasswordError');

            function validatePasswordMatch() {
                if (confirmPasswordInput.value && passwordInput.value !== confirmPasswordInput.value) {
                    confirmPasswordError.textContent = 'Mật khẩu xác nhận không khớp';
                    confirmPasswordInput.setCustomValidity('Mật khẩu xác nhận không khớp');
                } else {
                    confirmPasswordError.textContent = '';
                    confirmPasswordInput.setCustomValidity('');
                }
            }

            passwordInput.addEventListener('input', validatePasswordMatch);
            confirmPasswordInput.addEventListener('input', validatePasswordMatch);
        });
    </script>
}

