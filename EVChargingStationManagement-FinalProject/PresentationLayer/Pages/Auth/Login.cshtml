@page "/Auth/Login"
@model PresentationLayer.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4">Đăng nhập</h2>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.ErrorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            @Model.SuccessMessage
                        </div>
                    }

                    <form method="post" asp-page-handler="Login">
                        <div class="mb-3">
                            <label asp-for="LoginRequest.Username" class="form-label">Tên đăng nhập</label>
                            <input asp-for="LoginRequest.Username" class="form-control" required />
                            <span asp-validation-for="LoginRequest.Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LoginRequest.Password" class="form-label">Mật khẩu</label>
                            <input asp-for="LoginRequest.Password" type="password" class="form-control" required />
                            <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3">Đăng nhập</button>
                    </form>

                    <div class="text-center mb-3">
                        <span class="text-muted">hoặc</span>
                    </div>

                    <form method="post" asp-page-handler="GoogleLogin">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-google me-2" viewBox="0 0 16 16">
                                <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"/>
                            </svg>
                            Đăng nhập với Google
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <small class="text-muted">Chưa có tài khoản? <a asp-page="/Auth/Register">Đăng ký ngay</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

