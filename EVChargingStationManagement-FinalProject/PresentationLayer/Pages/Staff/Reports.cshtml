@page 
@{
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Staff • Báo cáo sự cố";
}

<section class="page-header">
    <h2>@ViewData["Title"]</h2>
    <button class="btn btn-primary" data-action="create-report">
        <i class="bi bi-plus-circle"></i> Tạo báo cáo mới
    </button>
</section>

<section class="filters dashboard-filters">
    <div class="filter-group">
        <label for="ReportStationFilter">Trạm sạc</label>
        <select id="ReportStationFilter" class="form-select" data-station-filter>
            <option value="">Tất cả trạm</option>
        </select>
    </div>
    <div class="filter-group">
        <label for="ReportStatusFilter">Trạng thái</label>
        <select id="ReportStatusFilter" class="form-select" data-status-filter>
            <option value="">Tất cả</option>
            <option value="0">Mới báo cáo</option>
            <option value="1">Đang xử lý</option>
            <option value="2">Đã xử lý</option>
            <option value="3">Đã đóng</option>
        </select>
    </div>
    <div class="filter-group">
        <button class="btn btn-primary" data-action="apply-filters">
            <i class="bi bi-funnel"></i> Lọc
        </button>
        <button class="btn btn-outline-secondary" data-action="reset-filters">
            <i class="bi bi-arrow-counterclockwise"></i> Đặt lại
        </button>
    </div>
</section>

<section class="content-grid">
    <div class="dashboard-panel">
        <div class="panel-header">
            <h3>Danh sách sự cố đã báo cáo</h3>
            <button class="btn btn-sm btn-outline-primary" data-action="refresh-reports">
                <i class="bi bi-arrow-clockwise"></i> Làm mới
            </button>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Thời gian báo cáo</th>
                        <th>Trạm sạc</th>
                        <th>Cổng sạc</th>
                        <th>Tiêu đề</th>
                        <th>Mô tả</th>
                        <th>Mức độ</th>
                        <th>Trạng thái</th>
                        <th>Người báo cáo</th>
                    </tr>
                </thead>
                <tbody id="reportsTableBody">
                    <tr>
                        <td colspan="8" class="text-center">Đang tải dữ liệu...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</section>

<!-- Modal Tạo báo cáo sự cố -->
<div class="modal fade" id="createReportModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tạo báo cáo sự cố mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="reportForm">
                    <div class="mb-3">
                        <label for="reportStation" class="form-label">Trạm sạc <span class="text-danger">*</span></label>
                        <select class="form-select" id="reportStation" name="stationId" required>
                            <option value="">-- Chọn trạm sạc --</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="reportSpot" class="form-label">Cổng sạc (tùy chọn)</label>
                        <select class="form-select" id="reportSpot" name="spotId">
                            <option value="">-- Chọn cổng sạc --</option>
                        </select>
                        <small class="form-text text-muted">Để trống nếu sự cố liên quan đến toàn bộ trạm</small>
                    </div>

                    <div class="mb-3">
                        <label for="reportTitle" class="form-label">Tiêu đề <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="reportTitle" name="title" required placeholder="Ví dụ: Cổng sạc không hoạt động">
                    </div>

                    <div class="mb-3">
                        <label for="reportErrorCode" class="form-label">Mã lỗi</label>
                        <input type="text" class="form-control" id="reportErrorCode" name="errorCode" placeholder="Ví dụ: ERR-001">
                    </div>

                    <div class="mb-3">
                        <label for="reportDescription" class="form-label">Mô tả chi tiết <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="reportDescription" name="description" rows="4" required placeholder="Mô tả chi tiết về sự cố..."></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="reportSeverity" class="form-label">Mức độ nghiêm trọng</label>
                        <select class="form-select" id="reportSeverity" name="severity">
                            <option value="Low">Thấp</option>
                            <option value="Medium" selected>Trung bình</option>
                            <option value="High">Cao</option>
                            <option value="Critical">Nghiêm trọng</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="saveReportBtn">Tạo báo cáo</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/staff-reports.js" asp-append-version="true"></script>
}
