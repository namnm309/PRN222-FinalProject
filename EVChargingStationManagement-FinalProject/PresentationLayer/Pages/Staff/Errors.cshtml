<script>
let allErrors = [];
let filteredErrors = [];

document.addEventListener('DOMContentLoaded', function() {
    loadStations();
    loadErrors();
    updateStats();
    
    setInterval(() => {
        loadErrors();
        updateStats();
    }, 30000);
});

async function loadStations() {
    try {
        const response = await fetch('/api/ChargingStation');
        const stations = await response.json();
        
        const select = document.getElementById('filterStation');
        select.innerHTML = '<option value="">T·∫•t c·∫£ tr·∫°m</option>';
        stations.forEach(s => {
            select.innerHTML += `<option value="${s.id}">${s.name}</option>`;
        });
    } catch (error) {
        console.error('Error loading stations:', error);
    }
}

async function loadErrors() {
    try {
        const response = await fetch('/api/StationError');
        if (!response.ok) throw new Error('Failed to fetch errors');
        
        allErrors = await response.json();
        filteredErrors = [...allErrors];
        applyFilters();
    } catch (error) {
        console.error('Error loading errors:', error);
        showError('Kh√¥ng th·ªÉ t·∫£i d·ªØ li·ªáu');
    }
}

function applyFilters() {
    let filtered = [...allErrors];
    
    const statusFilter = document.getElementById('filterStatus').value;
    if (statusFilter !== '') {
        filtered = filtered.filter(e => e.status == statusFilter);
    }
    
    const severityFilter = document.getElementById('filterSeverity').value;
    if (severityFilter !== '') {
        filtered = filtered.filter(e => e.severity === severityFilter);
    }
    
    const stationFilter = document.getElementById('filterStation').value;
    if (stationFilter !== '') {
        filtered = filtered.filter(e => e.chargingStationId === stationFilter);
    }
    
    filteredErrors = filtered;
    renderErrors();
}

function clearFilters() {
    document.getElementById('filterStatus').value = '';
    document.getElementById('filterSeverity').value = '';
    document.getElementById('filterStation').value = '';
    document.getElementById('searchInput').value = '';
    applyFilters();
}

function searchErrors() {
    const term = document.getElementById('searchInput').value.toLowerCase();
    
    if (!term) {
        applyFilters();
        return;
    }
    
    filteredErrors = allErrors.filter(e =>
        e.errorCode.toLowerCase().includes(term) ||
        e.title.toLowerCase().includes(term) ||
        (e.description && e.description.toLowerCase().includes(term))
    );
    
    renderErrors();
}

function renderErrors() {
    const container = document.getElementById('errorsContainer');
    
    if (filteredErrors.length === 0) {
