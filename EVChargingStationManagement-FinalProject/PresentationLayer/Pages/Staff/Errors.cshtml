        return;
    }
    
    let html = '';
    
    filteredErrors.forEach(error => {
        const reportedTime = new Date(error.reportedAt);
        const timeAgo = getTimeAgo(reportedTime);
        const severityClass = (error.severity || 'Medium').toLowerCase();
        
        html += `
