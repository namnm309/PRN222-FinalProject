}

async function updateStats() {
    try {
        const pendingRes = await fetch('/api/StationError/status/0');
        const pending = await pendingRes.json();
        document.getElementById('statPending').textContent = pending.length;
        
        const inProgressRes = await fetch('/api/StationError/status/1');
        const inProgress = await inProgressRes.json();
        document.getElementById('statInProgress').textContent = inProgress.length;
        
        const resolvedRes = await fetch('/api/StationError/status/2');
        const resolved = await resolvedRes.json();
        document.getElementById('statResolved').textContent = resolved.length;
        
        const allRes = await fetch('/api/StationError');
        const all = await allRes.json();
        const today = new Date().toDateString();
        const todayErrors = all.filter(e => new Date(e.reportedAt).toDateString() === today);
        document.getElementById('statToday').textContent = todayErrors.length;
    } catch (error) {
        console.error('Error updating stats:', error);
    }
}

