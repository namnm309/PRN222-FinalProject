    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #F3F4F6;
    }

    .detail-label {
        font-size: 14px;
        color: #6B7280;
    }

    .detail-value {
        font-size: 14px;
        font-weight: 600;
        color: #101828;
    }

    @@media (max-width: 768px) {
        .station-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

