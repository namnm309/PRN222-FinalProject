@page 
@{
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Admin • Giám sát trạm sạc";
}

<section class="page-header">
    <h2>@ViewData["Title"]</h2>
</section>

<section class="filters dashboard-filters">
    <div class="filter-group">
        <label for="SessionStationFilter">Trạm sạc</label>
        <select id="SessionStationFilter" class="form-select" data-station-filter>
            <option value="">Tất cả trạm</option>
        </select>
    </div>
    <div class="filter-group">
        <label for="SessionStatusFilter">Trạng thái</label>
        <select id="SessionStatusFilter" class="form-select" data-status-filter>
            <option value="">Tất cả</option>
            <option value="0">Scheduled</option>
            <option value="1">InProgress</option>
            <option value="2">Completed</option>
            <option value="3">Cancelled</option>
            <option value="4">Failed</option>
        </select>
    </div>
    <div class="filter-group">
        <label for="SessionDateFrom">Từ ngày</label>
        <input type="date" id="SessionDateFrom" class="form-control" data-date-from>
    </div>
    <div class="filter-group">
        <label for="SessionDateTo">Đến ngày</label>
        <input type="date" id="SessionDateTo" class="form-control" data-date-to>
    </div>
    <div class="filter-group">
        <button class="btn btn-primary" data-action="apply-filters">
            <i class="bi bi-funnel"></i> Lọc
        </button>
        <button class="btn btn-outline-secondary" data-action="reset-filters">
            <i class="bi bi-arrow-counterclockwise"></i> Đặt lại
        </button>
    </div>
</section>

<ul class="nav nav-tabs mb-3" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="active-tab" data-bs-toggle="tab" data-bs-target="#active-pane" type="button" role="tab">
            <i class="bi bi-lightning-charge"></i> Đang hoạt động
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="history-tab" data-bs-toggle="tab" data-bs-target="#history-pane" type="button" role="tab">
            <i class="bi bi-clock-history"></i> Lịch sử
        </button>
    </li>
</ul>

<div class="tab-content">
    <!-- Tab Đang hoạt động -->
    <div class="tab-pane fade show active" id="active-pane" role="tabpanel">
        <section class="content-grid">
            <div class="dashboard-panel">
                <div class="panel-header">
                    <h3>Phiên sạc đang hoạt động</h3>
                    <button class="btn btn-sm btn-outline-primary" data-action="refresh-active">
                        <i class="bi bi-arrow-clockwise"></i> Làm mới
                    </button>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Thời gian bắt đầu</th>
                                <th>Trạm/Điểm</th>
                                <th>Khách hàng</th>
                                <th>Xe</th>
                                <th>Năng lượng (kWh)</th>
                                <th>Thời gian</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody id="activeSessionsTableBody">
                            <tr>
                                <td colspan="7" class="text-center">Đang tải dữ liệu...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>

    <!-- Tab Lịch sử -->
    <div class="tab-pane fade" id="history-pane" role="tabpanel">
        <section class="content-grid">
            <div class="dashboard-panel">
                <div class="panel-header">
                    <h3>Lịch sử phiên sạc</h3>
                    <button class="btn btn-sm btn-outline-primary" data-action="refresh-history">
                        <i class="bi bi-arrow-clockwise"></i> Làm mới
                    </button>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Thời gian</th>
                                <th>Trạm/Điểm</th>
                                <th>Khách hàng</th>
                                <th>Xe</th>
                                <th>Năng lượng (kWh)</th>
                                <th>Chi phí (VND)</th>
                                <th>Thời gian</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody id="historySessionsTableBody">
                            <tr>
                                <td colspan="8" class="text-center">Đang tải dữ liệu...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer d-flex justify-content-between align-items-center">
                    <div>
                        <span id="historyPaginationInfo" class="text-muted">Hiển thị 0 - 0 của 0</span>
                    </div>
                    <nav>
                        <ul class="pagination pagination-sm mb-0" id="historyPagination">
                        </ul>
                    </nav>
                </div>
            </div>
        </section>
    </div>
</div>

<section class="content-grid mt-4">
    <div class="dashboard-panel">
        <div class="panel-header">
            <h3>Xu hướng sử dụng</h3>
        </div>
        <div class="panel-body">
            <canvas id="usageTrendChart" height="80"></canvas>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/admin-sessions.js" asp-append-version="true"></script>
}
